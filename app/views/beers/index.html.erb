<h1>My Beers</h1>

<table>
  <thead>
    <tr>
      <th>Name:</th>
      <th>Company:</th>
      <th>Count:</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.company %></td>
        <td><%= beer.count %></td>
        <td><%= link_to "Edit", edit_beer_path(beer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
